@model IEnumerable<Bookstore.Models.Book>

<div class="bookWrapper">
    <form>
        <div class="form-group">
            <label for="searchTerm">Search by Title:</label>
            <input type="text" class="form-control" id="searchTerm" onkeyup="searchBooks()" />
        </div>
    </form>
    <a href="#" onclick="sortBooksByPrice()">Sort by Price</a>
    <table class="table" id="booksTable">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Price</td>
                    <td>@book.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@book.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Add Book</a>
</div>